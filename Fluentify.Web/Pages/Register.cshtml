@page
@model UserService
@{
    ViewData["Title"] = "Sign Up";
}

<style type="text/css">
    /* Font styles */
body{
        background-image: linear-gradient( 50deg, hsl(0deg 0% 97%) 0%, hsl(249deg 42% 92%) 21%, hsl(248deg 52% 87%) 30%, hsl(246deg 56% 82%) 39%, hsl(245deg 57% 77%) 46%, hsl(243deg 58% 73%) 54%, hsl(240deg 59% 68%) 61%, hsl(237deg 60% 62%) 69%, hsl(232deg 62% 55%) 79%, hsl(221deg 92% 42%) 100% );
    }

/* Form styles */
h2 {
  font-family: 'Montserrat', sans-serif;
  font-size: 2.5rem;
  font-weight: 700;
  text-align: center;
  margin-top: 2rem;
}

.form-container {
  background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
  margin: 2rem auto;
  max-width: 600px;
  padding: 2rem;
}

.form-label {
  display: block;
  font-family: 'Montserrat', sans-serif;
  font-size: 1.2rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.form-control {
  border: 2px solid #ebebeb;
  border-radius: 10px;
  box-shadow: none;
  display: block;
  font-family: 'Montserrat', sans-serif;
  font-size: 1rem;
  padding: 1rem;
  width: 100%;
}

.form-control:focus {
  border-color: #007bff;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.error {
  color: red;
  display: block;
  font-family: 'Montserrat', sans-serif;
  font-size: 0.9rem;
  margin-top: 0.5rem;
}

.form-submit {
  background-color: #007bff;
  border: none;
  border-radius: 50px;
  color: #ffffff;
  cursor: pointer;
  display: block;
  font-family: 'Montserrat', sans-serif;
  font-size: 1.2rem;
  font-weight: 700;
  margin-top: 2rem;
  padding: 1rem 2rem;
  transition: background-color 0.2s ease-in-out;
}

.form-submit:hover {
  background-color: #0069d9;
}

</style>



<div class="form-container">
    <h2>Create your profile</h2>
    <form method="post">
        <div class="form-group">
            <label for="nickname" class="form-label">Nickname</label>
            <input asp-for="Users.Nickname" id="nickname" class="form-control" placeholder="Enter your nickname" />
            <span asp-validation-for="Users.Nickname" class="error"></span>
        </div>

        <div class="form-group">
            <label for="email" class="form-label">Email address</label>
            <input asp-for="Users.Email" type="email" id="email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Users.Email" class="error"></span>
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input asp-for="Users.Password" type="password" id="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Users.Password" class="error"></span>
        </div>

        <div class="form-group">
            <label for="confirm-password" class="form-label">Confirm password</label>
            <input asp-for="Users.ConfirmPassword" type="password" id="confirm-password" class="form-control" placeholder="Confirm your password" />
            <span asp-validation-for="Users.ConfirmPassword" class="error"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="form-submit btn rounded-pill">Submit</button>
        </div>
    </form>
</div>